      <TabItem Header="Dlcs" IsVisible="{Binding !IsDefaultApp}">
        <StackPanel Margin="0,10,0,0">
          <StackPanel Margin="10,0,0,5" Orientation="Horizontal" HorizontalAlignment="Stretch">
